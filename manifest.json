{
   "name": "Send To WhatsApp Web",
   "description" : "Send messages to ANY phone number appearing on a webpage",
   "version": "1.0",
   "manifest_version": 2,
   "permissions": [
     "activeTab",
     "tabs",
     "https://web.whatsapp.com/"
   ],

   "background": {
     "scripts": ["background.js"],
     "persistent": false
   },

   "content_scripts": [
     {
       "matches": [ "<all_urls>" ],
       "css": [ "assets/styles.css" ],
       "js": [
         "lib/require.js",
         "lib/libphonenumber-js.min.js",
         "handleSendToWaClicks.js",
         "addSendToWaActions.js"
       ]
     }
   ],

   "web_accessible_resources": [
     "assets/*"
   ]
 }
